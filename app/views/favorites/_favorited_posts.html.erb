<div class="media">
  <% avatar_url = @user.avatar_url(60) %>
  <% if avatar_url %>
    <div class="media-left">
      <%= image_tag avatar_url, class: 'media-object' %>
    </div>
  <% end %>
  <div class="media-body">
    <h4 class="media-heading">
      <%= link_to favorite.post.title, topic_post_path(favorite.post.topic, favorite.post) %>
    </h4>
    <small>
      submitted <%= time_ago_in_words(favorite.post.created_at) %> ago by <%= favorite.post.user.name %> <br>
      <%= pluralize(favorite.post.comments.count, 'comment') %>, <%= pluralize(favorite.post.favorites.count, 'favorite') %>, <%= "#{favorite.post.points} votes" %>
    </small>
  </div>
</div>
